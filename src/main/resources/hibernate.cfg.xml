<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/pitres?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping class="br.edu.cairu.app.web.integra.cairu.projetos.database.dbclass.Professor"/>
    <mapping class="br.edu.cairu.app.web.integra.cairu.projetos.database.dbclass.Disciplina"/>
    <mapping class="br.edu.cairu.app.web.integra.cairu.projetos.database.dbclass.Aluno"/>
    <mapping class="br.edu.cairu.app.web.integra.cairu.projetos.database.dbclass.Curso"/>
    <mapping class="br.edu.cairu.app.web.integra.cairu.projetos.database.dbclass.Anexo"/>
    <mapping class="br.edu.cairu.app.web.integra.cairu.projetos.database.dbclass.Projeto"/>
  </session-factory>
</hibernate-configuration>
