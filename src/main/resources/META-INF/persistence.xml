<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PROJETOINTEGRADOR" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>br.edu.cairu.app.web.integra.cairu.projetos.database.dbclass.Professor</class>
    <class>br.edu.cairu.app.web.integra.cairu.projetos.database.dbclass.Disciplina</class>
    <class>br.edu.cairu.app.web.integra.cairu.projetos.database.dbclass.Aluno</class>
    <class>br.edu.cairu.app.web.integra.cairu.projetos.database.dbclass.Curso</class>
    <class>br.edu.cairu.app.web.integra.cairu.projetos.database.dbclass.Anexo</class>
    <class>br.edu.cairu.app.web.integra.cairu.projetos.database.dbclass.Projeto</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/pitres"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
    </properties>
  </persistence-unit>
</persistence>
